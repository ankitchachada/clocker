<!DOCTYPE html>
<html>
  <head>
    <title>Clocker App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>
 <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
    </div>
    <div class="container">
      <div class="jumbotron">
        <h1 class="display-4">Clocker App</h1>
        <canvas id="canvas" width="100" height="100">
      </canvas>
        <p class="lead">
          <% if user_signed_in? %>
            Currently logged in as <%= current_user.try(:name) %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-primary" )%>
          <% else %>
              <%= link_to('Login to log your time', new_user_session_path) %> 
          <% end %>
        </p>
    </div>
      <%= yield %>
    </div>
  </body>
</html>
